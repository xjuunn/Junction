generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/prismaclient"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// --- 用户模块 ---

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  role          String    @default("user")
  accountType   UserAccountType @default(USER)
  banned        Boolean   @default(false)
  banReason     String?
  banExpires    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt

  // 认证相关
  passkeys passkey[]
  sessions Session[]
  accounts Account[]
  wallets  walletAddress[]

  // 社交与通知
  sentFriendRequests     Friendship[]   @relation("FriendRequestSender")
  receivedFriendRequests Friendship[]   @relation("FriendRequestReceiver")
  notifications          Notification[]

  // IM 扩展
  ownedConversations Conversation[]       @relation("ConversationOwner")
  conversations      ConversationMember[]
  messages           Message[]
  botProfile         AiBot? @relation("BotProfile")
  createdBots        AiBot[] @relation("BotCreator")
  aiLogs             AiLog[]

  @@unique([email])
  @@map("user")
}

// --- 社交模块 ---

model Friendship {
  id         String           @id @default(cuid())
  senderId   String
  sender     User             @relation("FriendRequestSender", fields: [senderId], references: [id])
  receiverId String
  receiver   User             @relation("FriendRequestReceiver", fields: [receiverId], references: [id])
  status     FriendshipStatus @default(PENDING)
  isBlocked  Boolean          @default(false)
  note       String?
  source     String?
  requestMsg String?
  updatedAt  DateTime         @default(now()) @updatedAt
  createdAt  DateTime         @default(now())

  @@unique([senderId, receiverId])
  @@map("friendship")
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  REJECTED
  BLOCKED
}

// --- IM 会话模块 ---

model Conversation {
  id          String           @id @default(cuid())
  type        ConversationType
  title       String?
  avatar      String?
  isTemporary Boolean          @default(false)

  // 归属设置
  ownerId String?
  owner   User?              @relation("ConversationOwner", fields: [ownerId], references: [id])
  status  ConversationStatus @default(ACTIVE)

  // 消息统计与预览
  lastMessageId String?  @unique
  lastMessage   Message? @relation("LastMessage", fields: [lastMessageId], references: [id])

  extra     Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members  ConversationMember[]
  messages Message[]            @relation("ConversationMessages")

  @@index([type])
  @@map("conversation")
}

model ConversationMember {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  role ConversationMemberRole @default(MEMBER)

  // 个人偏好设置
  muted    Boolean @default(false)
  pinned   Boolean @default(false)
  isActive Boolean @default(true) // 用于软删除/隐藏会话

  // 已读回执进度
  lastReadMessageId String?

  joinedAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([conversationId, userId])
  @@index([userId])
  @@map("conversation_member")
}

model Message {
  id String @id @default(cuid())

  /// 所属会话
  conversationId String
  conversation   Conversation @relation("ConversationMessages", fields: [conversationId], references: [id], onDelete: Cascade)

  /// 发送者（系统 / 机器人消息可为空）
  senderId String?
  sender   User?   @relation(fields: [senderId], references: [id])

  /// 消息类型（文本 / 图片 / 文件 / 系统 / 插件等）
  type MessageType @default(TEXT)

  /// 文本内容（TEXT / SYSTEM 消息使用）
  content String?

  /// 富媒体 / 结构化负载（图片、文件、卡片、插件消息）
  payload Json?

  /// 消息生命周期状态（删除 / 撤回 / 屏蔽）
  status MessageStatus @default(NORMAL)

  /// 是否被编辑（用于 UI 显示“已编辑”）
  isEdited Boolean @default(false)

  /// 被回复 / 引用的消息
  replyToId String?
  replyTo   Message?  @relation("MessageReply", fields: [replyToId], references: [id])
  replies   Message[] @relation("MessageReply")

  /// 客户端生成的消息 ID（用于幂等、防重发）
  clientMessageId String?

  /// 会话内消息顺序号（保证顺序稳定，不依赖时间）
  sequence Int

  /// 消息归属模块 / 插件（如：投票、交易、游戏等）
  moduleId String?

  /// 消息过期时间（临时聊天 / 阅后即焚）
  expiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// 反向关联：作为会话的最后一条消息
  lastMessageOf Conversation? @relation("LastMessage")

  @@unique([conversationId, clientMessageId])
  @@index([conversationId, sequence])
  @@index([conversationId, createdAt])
  @@map("message")
}

enum MessageType {
  TEXT /// 普通文本
  IMAGE /// 图片
  FILE /// 文件
  AUDIO /// 音频
  VIDEO /// 视频
  SYSTEM /// 系统消息
  NOTICE /// 通知类消息
  PLUGIN /// 插件 / 模块消息
  RICH_TEXT /// 富文本消息
}

enum MessageStatus {
  NORMAL /// 正常
  DELETED /// 对自己删除
  REVOKED /// 已撤回
  BLOCKED /// 被风控 / 屏蔽
}

enum ConversationType {
  PRIVATE
  GROUP
  TEMPORARY
  SYSTEM
}

enum ConversationStatus {
  ACTIVE
  ARCHIVED
  DISABLED
}

enum ConversationMemberRole {
  OWNER
  ADMIN
  MEMBER
}

// --- 机器人模块 ---

model AiBot {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation("BotProfile", fields: [userId], references: [id], onDelete: Cascade)
  creatorId     String
  creator       User     @relation("BotCreator", fields: [creatorId], references: [id])
  name          String
  description   String?
  avatar        String?

  visibility    BotVisibility   @default(PRIVATE)
  status        BotStatus       @default(ACTIVE)
  triggerMode   BotTriggerMode  @default(MENTION)
  autoReplyInGroup Boolean @default(false)
  responseMode  BotResponseMode @default(INSTANT)

  systemPrompt  String?
  temperature  Float  @default(0.7)
  maxTokens    Int    @default(1024)
  memoryLength Int    @default(20)

  tools              Json?
  knowledgeBase      Json?
  summaryEnabled     Boolean @default(false)
  translationEnabled Boolean @default(false)

  apiKeyEncrypted String?
  apiKeyHint      String?
  apiBaseUrl      String?
  model           String?
  orgDomain       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([creatorId, visibility])
  @@index([status])
  @@map("ai_bot")
}

enum BotVisibility {
  PRIVATE
  PUBLIC
  ORG
}

enum BotStatus {
  ACTIVE
  DISABLED
}

enum BotTriggerMode {
  MENTION
  AUTO
}

enum BotResponseMode {
  INSTANT
  STREAM
}

enum UserAccountType {
  USER
  ADMIN
  BOT
}

// --- AI 日志 ---

model AiLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider  String
  model     String
  request   Json
  response  Json?
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@map("ai_log")
}

// --- 通知模块 ---

model Notification {
  id            String                    @id @default(cuid())
  type          NotificationType
  title         String
  cover         String?
  content       String?
  icon          String?
  status        NotificationStatus        @default(UNREAD)
  processStatus NotificationProcessStatus @default(PENDING)
  level         NotificationLevel         @default(NORMAL)
  userId        String
  user          User                      @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionPath    String?
  actionPayload Json?
  payload       Json?
  extra         Json?
  processedAt   DateTime?
  createdAt     DateTime                  @default(now())
  updatedAt     DateTime                  @updatedAt

  @@index([userId, status])
  @@index([userId, processStatus])
  @@map("notification")
}

enum NotificationType {
  SYSTEM
  MESSAGE
  FRIEND_REQUEST
  MODULE_UPDATE
  DOWNLOAD
  WARNING
  CUSTOM
}

enum NotificationStatus {
  UNREAD
  READ
}

enum NotificationProcessStatus {
  PENDING
  PROCESSED
  EXPIRED
  CANCELED
}

enum NotificationLevel {
  LOW
  NORMAL
  HIGH
  URGENT
}

// --- 基础认证模块 (保持不变) ---

model passkey {
  id           String   @id @default(cuid())
  name         String?
  publicKey    String
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  credentialID String   @unique
  counter      Int
  deviceType   String
  backedUp     Boolean
  transports   String
  createdAt    DateTime @default(now())
  aaguid       String?
}

model walletAddress {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  address   String
  chainId   Int
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())

  @@unique([address, chainId])
  @@map("wallet_address")
}

model jwks {
  id         String    @id @default(cuid())
  publicKey  String
  privateKey String
  createdAt  DateTime
  expiresAt  DateTime?
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  impersonatedBy String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}
