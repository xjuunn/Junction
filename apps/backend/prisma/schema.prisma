generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/prismaclient"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                     String          @id
  name                   String
  email                  String
  emailVerified          Boolean         @default(false)
  image                  String?
  role                   String          @default("user") /// 用户的角色。默认为“user”。管理员将拥有“admin”角色。
  banned                 Boolean         @default(false) /// 用户是否被禁止
  banReason              String? /// 用户被封禁的原因
  banExpires             DateTime? /// 用户封禁到期的日期
  createdAt              DateTime        @default(now())
  updatedAt              DateTime        @default(now()) @updatedAt
  passkeys               passkey[]
  sessions               Session[]
  accounts               Account[]
  wallets                walletAddress[]
  sentFriendRequests     Friendship[]    @relation("FriendRequestSender") /// 用户发起的好友请求
  receivedFriendRequests Friendship[]    @relation("FriendRequestReceiver") /// 用户接收的好友请求
  notifications          Notification[]

  @@unique([email])
  @@map("user")
}

model passkey {
  id           String   @id @default(cuid())
  name         String?
  publicKey    String
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  credentialID String   @unique
  counter      Int
  deviceType   String
  backedUp     Boolean
  transports   String
  createdAt    DateTime @default(now())
  aaguid       String?
}

model walletAddress {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  address   String
  chainId   Int
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())

  @@unique([address, chainId])
  @@map("wallet_address")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  impersonatedBy String? ///模拟此会话的管理员的 ID
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

/// 好友关系
model Friendship {
  id         String           @id @default(cuid()) /// ID
  senderId   String /// 发送请求一方的ID
  sender     User             @relation("FriendRequestSender", fields: [senderId], references: [id]) /// 发送请求的一方
  receiverId String /// 接受请求一方的ID
  receiver   User             @relation("FriendRequestReceiver", fields: [receiverId], references: [id]) /// 接受请求的一方
  status     FriendshipStatus @default(PENDING) /// 好友关系状态
  isBlocked  Boolean          @default(false) /// 是否拉黑
  note       String? /// 备注
  source     String? /// 好友来源
  requestMsg String? /// 请求附言
  updatedAt  DateTime         @default(now()) @updatedAt /// 更新时间
  createdAt  DateTime         @default(now()) /// 创建时间

  @@unique([senderId, receiverId])
}

/// 好友关系状态
enum FriendshipStatus {
  PENDING /// 等待确认
  ACCEPTED /// 已成为好友
  REJECTED /// 拒绝申请
  BLOCKED /// 已拉黑
}

/// 通知类型
enum NotificationType {
  SYSTEM
  MESSAGE
  FRIEND_REQUEST
  MODULE_UPDATE
  DOWNLOAD
  WARNING
  CUSTOM
}

/// 通知状态
enum NotificationStatus {
  UNREAD
  READ
}

/// 通知表
model Notification {
  id      String             @id @default(cuid())
  type    NotificationType /// 通知类型
  title   String /// 通知标题
  content String? /// 通知内容
  icon    String? /// 图标，例如 URL 或 emoji
  status  NotificationStatus @default(UNREAD) /// 已读或未读

  userId String /// 所属用户
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  actionPath    String? /// 点击通知跳转路径，例如 "/chat/123"
  actionPayload Json? /// 点击通知附带参数
  extra         Json? /// 模块扩展字段

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notification")
}
