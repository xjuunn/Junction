{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Junction",
  "version": "0.1.0",
  "identifier": "com.junction.dev",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm run generate"
  },
  "app": {
    "windows": [
      {
        "title": "Junction",
        "width": 1050,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
