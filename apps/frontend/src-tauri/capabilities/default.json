{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "os:default",
    "os:allow-hostname",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "core:window:allow-close",
    "core:window:allow-unmaximize",
    "core:window:allow-set-theme",
    "core:event:default",
    "pinia:default",
    "deep-link:default",
    "dialog:allow-open",
    "fs:allow-read",
    "fs:allow-write-file",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-download-write",
    "notification:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-powershell",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "run-sh",
          "cmd": "sh",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "run-powershell",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "run-sh",
          "cmd": "sh",
          "args": true
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**"
        },
        {
          "url": "http://**"
        },
        {
          "url": "http://10.105.86.133:8080/**"
        },
        {
          "url": "http://localhost:8080/**"
        },
        {
          "url": "http://127.0.0.1:8080/**"
        },
        {
          "url": "https://*.tauri.app"
        }
      ]
    },
    "fs:default",
    "shell:default"
  ]
}
